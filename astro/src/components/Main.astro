---
import data from '../data/data.json';
import { Font } from 'astro:assets';
import Projects from './Projects.astro';
import Experience from './Experience.astro'
import Art from './Art.astro'
const { experience, projects, art } = data;
---
<Font cssVariable="--font-jetbrains-mono" preload />
<div id="page">
	<!-- Hero -->
	<header id="hero">
		<h1>Angelo Jensen</h1>
		<p class="subtitle">Computer Science at UCSD</p>
		<p class="bio">Interested in large-scale systems and HCI with LLMs.</p>
		<div class="contact">
			<p>github: <a href="https://github.com/a2jensen" target="_blank" rel="noopener">a2jensen</a></p>
			<p>email: <a href="mailto:angelojensen17@gmail.com">angelojensen17@gmail.com</a></p>
			<p>linkedin: <a href="https://linkedin.com/in/angelojensen" target="_blank" rel="noopener">angelojensen</a></p>
		</div>
	</header>

	<!-- Experience -->
	<Experience />

	<!-- Projects -->
	<Projects />

	<!-- Art -->
	<Art />
</div>

<style>
	body {
    font-family: var(--font-jetbrains-mono);
	}
	#page {
		max-width: 900px;
		margin: 0 auto;
		padding: 60px 24px;
		text-align: center;
	}

	/* Hero */
	#hero {
		margin-bottom: 60px;
	}

	h1 {
		font-size: 96px;
		margin: 0 0 4px;
	}

	.subtitle {
		margin: 0 0 8px;
		font-size: 16px;
		opacity: 0.7;
	}

	.bio {
		margin: 0 0 16px;
		font-size: 15px;
	}

	.contact p {
		margin: 2px 0;
		font-size: 14px;
	}

	.contact a {
		color: inherit;
	}

	/* Section headings */
	h2 {
		font-size: 20px;
		font-weight: 600;
		margin: 0 0 20px;
	}

	/* Mobile */
	@media screen and (max-width: 600px) {
		#page {
			padding: 40px 16px;
		}

		.projects-grid {
			grid-template-columns: 1fr;
		}

		.art-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}
</style>
