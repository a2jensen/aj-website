---
import data from '../data/data.json';
const { projects } = data;

// Build triangle rows: 2, 3, 4, 5, 6, 6, 6...
// If leftover can't fill the next row, append to current row
const rows: typeof projects[] = [];
let i = 0;
let rowSize = 2;
while (i < projects.length) {
	const nextRowSize = Math.min(rowSize + 1, 6);
	const remaining = projects.length - i - rowSize;
	if (remaining > 0 && remaining < nextRowSize) {
		rows.push(projects.slice(i, i + rowSize + remaining));
		i += rowSize + remaining;
	} else {
		rows.push(projects.slice(i, i + rowSize));
		i += rowSize;
	}
	rowSize = Math.min(rowSize + 1, 6);
}
---

<!-- Projects -->
	<section id="projects">
		<h2>projects</h2>
		<div class="projects-triangle">
			{rows.map((row) => (
				<div class="projects-row" style={`grid-template-columns: repeat(${row.length}, 220px);`}>
					{row.map((project) => (
						<a href={project.url} class="project-card" target="_blank" rel="noopener">
							<div class="project-image">
								<img src={project.image} alt={project.name} loading="lazy" />
							</div>
							<div class="project-info">
								<span class="project-name">{project.name}</span>
							</div>
							<p class="project-desc">{project.description}</p>
							{project.tech.length > 0 && (
								<p class="project-tech">{project.tech.join(', ')}</p>
							)}
						</a>
					))}
				</div>
			))}
		</div>
		<div class="projects-mobile-grid">
			{projects.map((project) => (
				<a href={project.url} class="project-card" target="_blank" rel="noopener">
					<div class="project-image">
						<img src={project.image} alt={project.name} loading="lazy" />
					</div>
					<div class="project-info">
						<span class="project-name">{project.name}</span>
					</div>
					<p class="project-desc">{project.description}</p>
					{project.tech.length > 0 && (
						<p class="project-tech">{project.tech.join(', ')}</p>
					)}
				</a>
			))}
		</div>
	</section>

<style>
/* Projects */
	#projects {
		margin-bottom: 60px;
	}

	.projects-row {
		display: grid;
		gap: 20px;
		margin-bottom: 20px;
	}

	.projects-mobile-grid {
		display: none;
	}

	.project-card {
		text-decoration: none;
		color: inherit;
		border: 1px solid #e0e0e0;
		border-radius: 8px;
		overflow: hidden;
		transition: box-shadow 0.2s;
	}

	.project-card:hover {
		box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
	}

	.project-image {
		width: 100%;
		aspect-ratio: 4 / 3;
		background: #f5f5f5;
		overflow: hidden;
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.project-info {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 12px 14px 0;
	}

	.project-name {
		font-weight: 600;
		font-size: 15px;
	}

	.project-tech {
		font-size: 10px;
		padding: 0 14px 14px;
		margin: 0;
		opacity: 0.5;
	}

	.project-desc {
		padding: 4px 14px 14px;
		margin: 0;
		font-size: 13px;
		opacity: 0.7;
		line-height: 1.4;
	}

	@media screen and (max-width: 600px) {
		.projects-triangle {
			display: none;
		}

		.projects-mobile-grid {
			display: grid;
			grid-template-columns: repeat(2, minmax(0, 1fr));
			gap: 20px;
		}
	}
</style>
