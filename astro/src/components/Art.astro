---
import data from '../data/data.json';
const { art } = data;
---
<!-- Art -->
<section id="art">
    <h2>art</h2>
    <div class="art-grid">
        {art.map((piece) => (
            <div class="art-item">
                <img src={piece.image} alt={piece.title} loading="lazy" />
                <span class="art-title">{piece.title}</span>
            </div>
        ))}
    </div>
</section>

<style>
    /* Art */
	.art-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 16px;
	}

	.art-item {
		display: flex;
		flex-direction: column;
		gap: 6px;
	}

	.art-item img {
		width: 100%;
		aspect-ratio: 1;
		object-fit: cover;
		border-radius: 6px;
		background: #f5f5f5;
	}

	.art-title {
		font-size: 13px;
		opacity: 0.7;
	}
</style>